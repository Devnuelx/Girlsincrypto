// Prisma schema for Girls in Crypto Hub Learning Platform
// MongoDB Version
// Run: npx prisma generate

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String
  firstName    String?
  lastName     String?
  role         Role     @default(STUDENT)
  timezone     String   @default("UTC")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  enrollments   Enrollment[]
  tierPurchases TierPurchase[]
  progress      Progress[]
  purchases     Purchase[]

  @@map("users")
}

enum Role {
  ADMIN
  STUDENT
}

// ============================================
// TIER SYSTEM
// ============================================

enum Tier {
  HEIRESS   // Entry tier
  EMPRESS   // Mid tier - includes Heiress access
  SOVEREIGN // Top tier - includes all access
}

model TierPurchase {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  tier            Tier
  transactionId   String   @unique // Flutterwave transaction ID
  amount          Float
  currency        String   @default("USD")
  purchasedAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tier])
  @@map("tier_purchases")
}

// ============================================
// COURSE STRUCTURE
// ============================================

model Course {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  slug              String   @unique
  description       String?
  thumbnailUrl      String?
  tier              Tier     @default(HEIRESS)
  isPublished       Boolean  @default(false)
  isCapped          Boolean  @default(false)
  maxEnrollments    Int?
  minDurationWeeks  Int      @default(4)
  maxLessonsPerWeek Int      @default(5)
  allowDayChoice    Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  modules     Module[]
  enrollments Enrollment[]

  @@map("courses")
}

model Module {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  courseId    String   @db.ObjectId
  title       String
  description String?
  orderIndex  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course  Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons Lesson[]

  @@unique([courseId, orderIndex])
  @@map("modules")
}

model Lesson {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  moduleId        String      @db.ObjectId
  title           String
  description     String?
  contentUrl      String?
  contentType     ContentType @default(VIDEO)
  orderIndex      Int
  unlockOffset    Int         @default(0)
  isPreviewable   Boolean     @default(false)
  durationMinutes Int?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  module          Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  progress        Progress[]
  unlockSchedules LessonUnlock[]

  @@unique([moduleId, orderIndex])
  @@map("lessons")
}

enum ContentType {
  VIDEO
  TEXT
  PDF
  QUIZ
}

// ============================================
// ENROLLMENT & UNLOCKING
// ============================================

model Enrollment {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  userId        String         @db.ObjectId
  courseId      String         @db.ObjectId
  preferredDays DayOfWeek[]
  startDate     DateTime       @default(now())
  unlockPlan    UnlockPlanType @default(GENERATED)
  adminOverride Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  course        Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessonUnlocks LessonUnlock[]

  @@unique([userId, courseId])
  @@map("enrollments")
}

enum DayOfWeek {
  MON
  TUE
  WED
  THU
  FRI
  SAT
  SUN
}

enum UnlockPlanType {
  GENERATED
  FIXED
  COHORT
}

model LessonUnlock {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  enrollmentId String   @db.ObjectId
  lessonId     String   @db.ObjectId
  unlockAt     DateTime
  isUnlocked   Boolean  @default(false)

  enrollment Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  lesson     Lesson     @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([enrollmentId, lessonId])
  @@map("lesson_unlocks")
}

// ============================================
// PROGRESS TRACKING
// ============================================

model Progress {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  userId       String    @db.ObjectId
  lessonId     String    @db.ObjectId
  isCompleted  Boolean   @default(false)
  completedAt  DateTime?
  watchTime    Int       @default(0)
  lastPosition Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@map("progress")
}

// ============================================
// MULTI-TENANT TRAFFIC ROUTING ENGINE
// ============================================

enum TenantStatus {
  ACTIVE
  INACTIVE
}

model Tenant {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String       @unique
  status    TenantStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  whatsappGroups WhatsappGroup[]
  clickLogs      ClickLog[]
  leads          Lead[]

  @@map("tenants")
}

model WhatsappGroup {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  tenantId   String   @db.ObjectId
  name       String
  inviteLink String
  clickCount Int      @default(0)
  maxClicks  Int      @default(900)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant    Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  clickLogs ClickLog[]

  @@map("whatsapp_groups")
}

model ClickLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  tenantId  String   @db.ObjectId
  groupId   String   @db.ObjectId
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  tenant Tenant        @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  group  WhatsappGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt])
  @@map("click_logs")
}

enum LeadSource {
  ADS
  LANDING_PAGE
  COLD_EMAIL
  ORGANIC
}

model Lead {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  tenantId  String     @db.ObjectId
  name      String?
  email     String?
  phone     String?
  source    LeadSource @default(ORGANIC)
  createdAt DateTime   @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt])
  @@map("leads")
}

// ============================================
// COMMERCE (E-BOOKS & MENTORSHIP)
// ============================================

enum ProductType {
  EBOOK
  MENTORSHIP
  COURSE
}

model Product {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  price       Float
  type        ProductType @default(EBOOK)
  fileUrl     String?     // For E-books
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  purchases Purchase[]

  @@map("products")
}

enum PurchaseStatus {
  PENDING
  COMPLETED
  FAILED
}

model Purchase {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  productId       String         @db.ObjectId
  userId          String?        @db.ObjectId // Optional: guest checkout
  guestEmail      String?
  guestName       String?
  amount          Float
  currency        String         @default("USD")
  status          PurchaseStatus @default(PENDING)
  paymentProvider String         @default("FLUTTERWAVE")
  transactionId   String?        // Gateway trans ID
  metadata        Json?          // Provider response/metadata
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  product Product @relation(fields: [productId], references: [id])
  user    User?   @relation(fields: [userId], references: [id])

  @@map("purchases")
}
