# Backend Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ===========================================
# DATABASE
# ===========================================
# MongoDB connection string (MongoDB Atlas recommended)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority"

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT secret - generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-min-64-characters-long-generate-random"
JWT_EXPIRES_IN="7d"

# ===========================================
# SERVER
# ===========================================
PORT=3001

# ===========================================
# APP URLs
# ===========================================
BACKEND_URL=http://localhost:3001/api
FRONTEND_URL=http://localhost:3000

# ===========================================
# FLUTTERWAVE PAYMENT GATEWAY
# ===========================================
# Get your keys from https://dashboard.flutterwave.com/settings/apis
FLW_PUBLIC_KEY=FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X
FLW_SECRET_KEY=FLWSECK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-X

# ===========================================
# EMAIL (SMTP)
# ===========================================
# Zoho Mail SMTP settings
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-app-password
